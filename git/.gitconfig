# ============================================================
# Global Git Configuration
# ============================================================

[user]
    name = jatifjr
    email = 90365537+jatifjr@users.noreply.github.com
    # Uncomment if using GPG or SSH commit signing
    # signingkey = your-gpg-or-ssh-key-id

[core]
    editor = nvim                      # Change to your editor
    autocrlf = input                   # Safe for macOS/Linux; set to 'true' on Windows
    excludesfile = ~/.config/global-gitignore
    pager = less -FRX                  # No pagination if output fits in terminal
    fsmonitor = true                   # Speed up status checks (Git 2.36+)

[color]
    ui = auto

[alias]
    # Status & branch navigation
    st = status -sb
    br = branch
    co = checkout
    sw = switch

    # Commits
    ci = commit
    amend = commit --amend --no-edit
    unstage = reset HEAD --
    fix = commit --fixup
    squash = commit --squash

    # Logs
    lg = log --oneline --graph --decorate --all
    ll = log --stat
    lga = log --oneline --graph --decorate --all --abbrev-commit

    # Diffs
    df = diff
    dc = diff --cached

    # Undo helpers (safe)
    undo = reset --soft HEAD~1
    discard = checkout --              # Discard changes in working dir
    wipe = !git reset --hard && git clean -fd

    # Fetch & sync
    fp = fetch --prune
    up = !git pull --rebase --autostash

[merge]
    tool = nvimdiff
    conflictstyle = diff3

[diff]
    tool = nvimdiff

[push]
    default = simple
    autoSetupRemote = true             # Automatically track upstream on first push

[pull]
    ff = only                          # Disallow merge commits from pull
    rebase = true                      # Rebase instead of merge by default

[init]
    defaultBranch = main

[fetch]
    prune = true

[rerere]
    enabled = true                     # Remember merge conflict resolutions

[commit]
    verbose = true                     # Show diff when committing

[url "git@github.com:jatifjr/"]
    insteadOf = https://github.com/jatifjr/
