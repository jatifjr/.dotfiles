;; Kanata configuration for Mac
(defcfg
  process-unmapped-keys yes
  log-layer-changes no
)

(defvar
  tap-time 100
  hold-time 100
)

;; Define aliases for cleaner code
(defalias
  hyper (tap-hold-press $tap-time $hold-time esc (multi lsft lctl lalt lmet))
  escctrl (tap-hold $tap-time $hold-time esc lctl) ;; Esc + Left Control
)

;; Define input devices (adjust device path as needed for your machine)
(defsrc
  esc
  caps
)

;; Define the output layer
(deflayer base
  @hyper
  @escctrl
)
