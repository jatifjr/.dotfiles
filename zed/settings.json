// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "always_allow_tool_actions": true,
    "button": false,
    "dock": "left",
    "model_parameters": [],
    "use_modifier_to_send": true
  },
  "buffer_font_family": "SF Mono",
  "buffer_font_size": 13.0,
  "collaboration_panel": {
    "button": false
  },
  "debugger": {
    "button": false
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "git_panel": {
    "button": false,
    "dock": "right"
  },
  "icon_theme": "Symbols Icon Theme",
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false,
    "dock": "right"
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "button": false,
    "dock": "right",
    "sticky_scroll": false
  },
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": false
  },
  "terminal": {
    "button": false
  },
  "theme": {
    "dark": "Catppuccin Espresso (Blur)",
    "light": "Catppuccin Latte (Blur)",
    "mode": "system"
  },
  "toolbar": {
    "agent_review": false,
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "ui_font_family": "SF Pro",
  "ui_font_size": 14.0,
  "vim_mode": true
}
